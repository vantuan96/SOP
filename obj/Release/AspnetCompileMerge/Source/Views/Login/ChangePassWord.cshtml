
@{
    var X = Html.X();
}

@(X.Window()
    .Y(50)
    .X(880)
    .Width(400)
    .Title("Đổi PassWord")
    .Padding(5)
    .Modal(true)
    .Closable(true)
    .CloseAction(CloseAction.Destroy)
        .Items(

            X.FormPanel()
            .ID("PassWordForm")
            .BodyPadding(5)
            .FieldDefaults(fd => fd.LabelWidth = 120)
            .Listeners(l => l.ValidityChange.Handler = "#{ChageButton}.setDisabled(!valid);")
            .Items(

                 X.TextField()
                    .ID("Old_Password")
                    .Width(350)
                     .InputType(Ext.Net.InputType.Password)
                    .AllowBlank(false)
                    .FieldLabel("Mật khẩu hiện tại"),
                         X.TextField()
                        .ID("New1_Password")
                         .InputType(Ext.Net.InputType.Password)
                            .AllowBlank(false)
                            .Width(350)
                        .FieldLabel("Mật khẩu mới"),
                             X.TextField()
                        .ID("New2_Password")
                         .InputType(Ext.Net.InputType.Password)
                            .AllowBlank(false)
                            .Width(350)
                        .FieldLabel("Xác thực")
                    )
             .Buttons(
                        X.Button()
                        .Icon(Icon.KeyStart)
                        .Disabled(true)
                        .ID("ChageButton")
                        .Text("Thay đổi")
                            .DirectEvents(de =>
                                    {
                                        de.Click.Url = Url.Action("/SavePassWord");
                                        de.Click.FormID = "PassWordForm";
                                        de.Click.EventMask.ShowMask = true;
                                    })

                    )
               )
)





