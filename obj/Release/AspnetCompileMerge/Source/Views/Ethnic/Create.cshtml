@model SOP.Models.Ethnic
@{
    ViewBag.Title = "Create";
    var X = Html.X();
}
<script>
    var onSuccess = function (grid, data) {
        grid.show();
        grid.getStore().loadData(data);
        App.AddEthnicWindow.close();
    };
</script>
@(X.Window()
    .ID("AddEthnicWindow")
    .Width(300)
    .Flex(1)
    .Icon(Icon.Add)
    .Title("Thêm Dân Tộc")
    .Padding(5)
    .CloseAction(CloseAction.Destroy)
            .Items(
                        X.FormPanel()
                            .ID("AddEthnicFormPanel")
                            .Frame(true)
                            .DefaultAnchor("100%")
                            .BodyPadding(5)
                            .Items(
                                X.TextFieldFor(m => m.Ethnic_Name).FieldLabel("Tên Dân Tộc").LabelWidth(150).AllowBlank(false),
                                X.CheckboxFor(m => m.Ethnic_Active).FieldLabel("Trạng Thái").LabelWidth(150).BoxLabel("Kích hoạt").Checked(false)
                            )
                    )
    .Buttons(
         X.Button()
         .Text("Lưu")
         .Icon(Icon.Accept)
                 .DirectEvents(de =>
                 {
                     de.Click.Url = Url.Action("/Save");
                     de.Click.EventMask.ShowMask = true;
                     de.Click.FormID = "AddEthnicFormPanel";
                     de.Click.Success = "onSuccess(App.EthnicGridPanel, result.data);";
                 }
            )
    )
)
