@model SOP.Models.FieldOperation
@{
    ViewBag.Title = "Edit";
    var X = Html.X();
}
@(X.Window()
    .Width(300)
    .Height(170)
    .Flex(1)
    .Icon(Icon.Add)
    .Title("Sửa lĩnh vực")
    .Padding(5)
    .CloseAction(CloseAction.Destroy)
            .Items(
                        X.FormPanel()
                            .ID("FormPanel1")
                            .Frame(true)
                            .DefaultAnchor("100%")
                            .BodyPadding(5)
                            .Items(
                                  X.NumberFieldFor(m => m.FieldOperation_Id).FieldLabel("Mã").Value(Model.FieldOperation_Id).ReadOnly(true).Hidden(true),
                                  X.TextFieldFor(m => m.FieldOperation_Name).FieldLabel("Tên lĩnh vực").Text(Model.FieldOperation_Name).AllowBlank(false),
                                  X.CheckboxFor(m => m.FieldOperation_Active).FieldLabel("Trạng Thái").BoxLabel("Kích hoạt")
                            )
                    )
    .Buttons(
         X.Button()
         .Text("Lưu")
         .Icon(Icon.Accept)
                 .DirectEvents(de =>
                 {
                     de.Click.Url = Url.Action("/EditSave");
                     de.Click.EventMask.ShowMask = true;
                     de.Click.FormID = "FormPanel1";
                 }
            )
    )
) 
