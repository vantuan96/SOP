@model SOP.Models.Province

@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var X = Html.X();
}

@(X.Window()
    .Width(400)
    //.Height(140)
    .Flex(1)
    .Icon(Icon.Add)
    .Title("Sửa Thông tin Tỉnh-Thành Phố")
    .Padding(5)
    .CloseAction(CloseAction.Destroy)
            .Items(
                        X.FormPanel()
                            .ID("FormPanel1")
                            .Frame(true)
                            .DefaultAnchor("100%")
                            .BodyPadding(5)
                            .Items(
                                X.NumberFieldFor(m => m.Province_Id).FieldLabel("Mã").LabelWidth(150).Value(Model.Province_Id).ReadOnly(true).Hidden(true),
                                X.TextFieldFor(m => m.Province_Name).FieldLabel("Tên Tỉnh - Thành Phố").LabelWidth(150).Text(Model.Province_Name),
                                X.CheckboxFor(m => m.Province_Active).FieldLabel("Trạng Thái").LabelWidth(150).BoxLabel("Kích hoạt")
                            )
                    )
    .Buttons(
         X.Button()
         .Text("Lưu")
         .Icon(Icon.Accept)
                 .DirectEvents(de =>
                 {
                     de.Click.Url = Url.Action("/EditSave");
                     de.Click.EventMask.ShowMask = true;
                     de.Click.FormID = "FormPanel1";
                 }
            )
    )
) 